<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PV239_IdeaApp.Views.IdeaMasterDetailPageDetail"
             Title="Detail">
    <StackLayout Padding="10">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <StackLayout x:Name="buttonsPanel"
                         Grid.Column="1"
                         Orientation="Horizontal"
                         HorizontalOptions="StartAndExpand"
                         BackgroundColor="Gray">
                <Button x:Name="DeleteButton"
                        Text="Delete"
                        MinimumHeightRequest="30"
                        Clicked="DeleteButton_Clicked"/>
                <Button x:Name="EditButton"
                        Text="Edit" 
                        MinimumHeightRequest="30"
                        Clicked="EditButton_Clicked"/>
            </StackLayout>
        </Grid>
        <Label Text="Idea" FontSize="Large"/>
        <Label Text="{Binding Idea.Name}" FontSize="Medium"/>
        <Label Text="Description" FontSize="Large"/>
        <Label Text="{Binding Idea.Description}" FontSize="Medium"/>
    </StackLayout>
</ContentPage>